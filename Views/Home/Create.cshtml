@model Staff
@inject IStaffRepository _staffRepo
@{ 
    ViewBag.title = "Create Staff";
}

<form asp-controller="home" asp-action="create" method="post" class="m-3">
    <div class="row g-3 align-items-center">
        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 align-items-center">
        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="LastName" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 align-items-center">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 align-items-center">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Departments>()">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row g-3 align-items-center">
        <button type="submit" class="btn btn-primary">
            Create
        </button>
    </div>
    <div class="row g-3 align-items-center">
       Total Staff Count: @_staffRepo.GetAll().Count();
    </div>
</form>